{
	"name": "Library",
	"version": "2.0",
	"author": "yongxinL",
	"url": "https://github.com/yongxinL/mediawiki-skins-Library",
	"descriptionmsg": "library-desc",
	"namemsg": "skinname-library",
	"license-name": "GPL-2.0-or-later",
	"type": "skin",
	"requires": {
		"MediaWiki": ">= 1.35.0"
	},
	"ValidSkinNames": {
		"library": {
			"class": "SkinLibrary",
			"@args": "See SkinLibrary::__construct for more detail.",
			"args": [
					{
					"name": "library",
					"styles": [
						"skins.library.vendor.styles",
						"skins.library.styles"
					],
					"messages": [
						"sitetitle",
						"tagline"
					],
					"scripts": [
						"skins.library.vendor.js",
						"skins.library.js"
					]
				} 
			]
		}
	},
	"MessagesDirs": {
		"Library": [
			"i18n"
		]
	},
	"AutoloadClasses": {
		"SkinLibrary": "includes/SkinLibrary.php"
	},
	"AutoloadNamespaces": {
		"Library\\": "includes/"
	},
	"Hooks": {
		"OutputPageBeforeHTML": "Library\\Hooks::onOutputPageBeforeHTML",
		"OutputPageBodyAttributes": "Library\\Hooks::onOutputPageBodyAttributes"
	},
	"@note": "When modifying skins.library.styles definition, make sure the installer still works",
	"ResourceModules": {
		"skins.library.vendor.styles": {
			"styles":[
				"resources/bootstrap/bootstrap.min.css",
				"resources/fontawesome/css/fontawesome.min.css"
			]
		},
		"skins.library.styles": {
			"class": "ResourceLoaderSkinModule",
			"features": {
				"normalize": true,
				"elements": true,
				"content": true,
				"interface": true,
				"logo": true
			},
			"targets": [
				"desktop",
				"mobile"
			],
			"styles": {
				"resources/skins.library.styles/library.css": {
					"media": "screen"
				},
				"resources/print.css": {
					"media": "print"
				}
			}
		},
		"skins.library.vendor.js": {
			"packageFiles": [
				"resources/bootstrap/bootstrap.bundle.min.js"
			]
		},
		"skins.library.js": {
			"packageFiles": [
				"resources/skins.library.js/library.js"
			],
			"dependencies": [
				"mediawiki.util",
				"mediawiki.page.ready"
			]
		}
	},
	"ResourceFileModulePaths": {
		"localBasePath": "",
		"remoteSkinPath": "Library"
	},
	"ResourceModuleSkinStyles": {
		"library": {
			"jquery.tipsy": "resources/jquery.tipsy.less",
			"jquery.ui": [
				"resources/jquery.ui/jquery.ui.core.css",
				"resources/jquery.ui/jquery.ui.theme.css",
				"resources/jquery.ui/jquery.ui.accordion.css",
				"resources/jquery.ui/jquery.ui.autocomplete.css",
				"resources/jquery.ui/jquery.ui.button.css",
				"resources/jquery.ui/jquery.ui.datepicker.css",
				"resources/jquery.ui/jquery.ui.dialog.css",
				"resources/jquery.ui/jquery.ui.menu.css",
				"resources/jquery.ui/jquery.ui.progressbar.css",
				"resources/jquery.ui/jquery.ui.resizable.css",
				"resources/jquery.ui/jquery.ui.selectable.css",
				"resources/jquery.ui/jquery.ui.slider.css",
				"resources/jquery.ui/jquery.ui.tabs.css",
				"resources/jquery.ui/jquery.ui.tooltip.css"
			],
			"+mediawiki.action.view.redirectPage": "resources/mediawiki.action.view.redirectPage.less",
			"+mediawiki.notification": "resources/mediawiki.notification.less",
			"+oojs-ui-core.styles": "resources/ooui.less",
			"mediawiki.special": "resources/mediawiki.special.less",
			"+ext.relatedArticles.readMore": "resources/ext.relatedArticles.readMore.less"
		}
	},
	"config": {
		"LibraryUseSimpleSearch": {
			"value": true
		},
		"LibraryUseIconWatch": {
			"value": true
		}
	},
	"manifest_version": 2
}
