		<a href="{{{main-page-href}}}" class="mw-logo">{{{msg-sitetitle}}}</a>
        <a href="" class="mw-sidebar-toggle-menu">
          <i class="fas fa-arrow-left"></i>
          <i class="fas fa-times"></i>
        </a>
	</div>
	<div class="mw-sidebar-body">
		{{#array-sidebar-body}}{{>Menu}}{{/array-sidebar-body}}
