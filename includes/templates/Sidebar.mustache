<div class="mw-sidebar">
	<a href="{{{main-page-href}}}" class="mw-sidebar-logo"><i class="fas fa-university"></i></a>
	<nav class="nav">
		{{{html-sidebar-aside}}}
	</nav>
	<div class="mw-sidebar-bottom">
		<a href="/wiki/Help:Contents" class="mw-sidebar-help"><i class="far fa-lightbulb"></i></a>
	</div>
</div>

